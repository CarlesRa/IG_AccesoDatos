<Window x:Class="WindowNewEmployee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowNewEmployee"
        mc:Ignorable="d"
        Title="New Employee" Height="196.539" Width="271.536" Closing="OnWindowClosing">
    <Grid>
        <Label Content="Name: " HorizontalAlignment="Left" Margin="26,23,0,0" VerticalAlignment="Top" Width="44"/>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="26,54,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbPolitic" HorizontalAlignment="Left" Margin="19,91,0,0" VerticalAlignment="Top" Width="143"
                  Text="--Affiliation--">
            <ComboBoxItem>Independent</ComboBoxItem>
            <ComboBoxItem Name="Federalist">Federalist</ComboBoxItem>
            <ComboBoxItem >DemocratRepublican</ComboBoxItem>

        </ComboBox>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="81,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="tbTitle" HorizontalAlignment="Left" Height="23" Margin="81,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="cbRelected" Content="Relected" HorizontalAlignment="Left" Margin="183,91,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btSaveEmployee" Content="Save Employee" HorizontalAlignment="Left" Margin="162,130,0,0" VerticalAlignment="Top" Width="86" Click="btSaveEmployee_Click"/>
    </Grid>
</Window>
